<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.p6e.germ.oauth2.infrastructure.repository.mapper.P6eClientMapper">

    <select id="count" parameterType="com.p6e.germ.oauth2.infrastructure.repository.db.P6eClientDb" resultType="int">
        SELECT COUNT(`id`) FROM `p6e_oauth2_client`
        <trim prefix="WHERE" prefixOverrides="AND |OR">

        </trim>;
    </select>

    <select id="queryById" parameterType="com.p6e.germ.oauth2.infrastructure.repository.db.P6eClientDb"
            resultType="com.p6e.germ.oauth2.infrastructure.repository.db.P6eClientDb">
        SELECT
            `id`, `status`, `name`, `key`, `secret`, `scope`, `redirect_uri`, `describe`, `limiting_rule`
        FROM
            `p6e_oauth2_client`
        WHERE `id` = #{id} LIMIT 0, 1;
    </select>

    <select id="queryByKey" parameterType="com.p6e.germ.oauth2.infrastructure.repository.db.P6eClientDb"
            resultType="com.p6e.germ.oauth2.infrastructure.repository.db.P6eClientDb">
        SELECT
            `id`, `status`, `name`, `key`, `secret`, `scope`, `redirect_uri`, `describe`, `limiting_rule`
        FROM
            `p6e_oauth2_client`
        WHERE `key` = #{key} LIMIT 0, 1;
    </select>

    <select id="queryAll" parameterType="com.p6e.germ.oauth2.infrastructure.repository.db.P6eClientDb"
            resultType="com.p6e.germ.oauth2.infrastructure.repository.db.P6eClientDb">
        SELECT
            `id`, `status`, `name`, `key`, `secret`, `scope`, `redirect_uri`, `describe`, `limiting_rule`
        FROM
            `p6e_oauth2_client`
        <trim prefix="WHERE" prefixOverrides="AND |OR">
            <if test="status != null">AND `status` = #{status}</if>
            <if test="name != null">AND `name` = #{name}</if>
            <if test="scope != null">AND `scope` = #{scope}</if>
            <if test="redirectUrl != null">AND `redirect_uri` = #{redirectUrl}</if>
            <if test="describe != null">AND `describe` = #{describe}</if>
            <if test="limitingRule != null">AND `limiting_rule` = #{limitingRule}</if>
        </trim>
        LIMIT #{page}, #{size};
    </select>

    <insert id="create" parameterType="com.p6e.germ.oauth2.infrastructure.repository.db.P6eClientDb">
        INSERT INTO  `p6e_oauth2_client`
        (`status`, `name`, `key`, `secret`, `scope`, `redirect_uri`, `describe`, `limiting_rule`)
        VALUE
        (#{status}, #{name}, #{key}, #{secret}, #{scope}, #{redirectUrl}, #{describe}, #{limitingRule});
    </insert>

    <update id="update" parameterType="com.p6e.germ.oauth2.infrastructure.repository.db.P6eClientDb">
        UPDATE `p6e_oauth2_client`
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null">`status` = #{status},</if>
            <if test="name != null">`name` = #{name},</if>
            <if test="scope != null">`scope` = #{scope},</if>
            <if test="redirectUrl != null">`redirect_uri` = #{redirectUrl},</if>
            <if test="describe != null">`describe` = #{describe},</if>
            <if test="limitingRule != null">`limiting_rule` = #{limitingRule},</if>
        </trim>
        WHERE id = {id};
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM `p6e_oauth2_client` WHERE id = {id};
    </delete>

</mapper>